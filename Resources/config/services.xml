<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service
            id="security.access.resource_voter"
            class="Bkstg\ResourceBundle\Security\Authorization\Voter\ResourceVoter"
            public="false">

            <tag name="security.voter" />
        </service>

        <service id="bkstg.resource_bundle.menu_subscriber"
            class="Bkstg\ResourceBundle\EventSubscriber\MenuSubscriber">

            <argument type="service" id="request_stack" />
            <tag name="kernel.event_subscriber" />
        </service>
    </services>
</container>
