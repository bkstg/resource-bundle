{% embed '@BkstgSearch/Search/_search_result.html.twig' with {'link': url('bkstg_resource_read', {'production_slug': result.groups[0].slug, 'id': result.id})} %}
  {% trans_default_domain 'BkstgResourceBundle' %}
  {% block result %}
    <h4><i class="fa fa-file"></i> {{ result }}</h4>
    <p class="text-primary">{{ result.groups[0] }}</p>
    {% if result.description is not empty %}
      <p>{{ result.description|striptags|truncate(300, true)|purify }}</p>
    {% endif %}
  {% endblock %}
{% endembed %}
