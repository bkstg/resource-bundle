{% trans_default_domain 'BkstgResourceBundle' %}

{% if is_granted('edit', resource) %}
  {% set route = app.request.attributes.get('_route') %}
  <ul class="nav nav-tabs mb-3">
    <li class="nav-item">
      <a class="nav-link{% if route == 'bkstg_resource_read' %} active{% endif %}" href="{{ url('bkstg_resource_read', {'id': resource.id, 'production_slug': production.slug}) }}">{{ 'view'|trans }}</a>
    </li>
    <li class="nav-item">
      <a class="nav-link{% if route == 'bkstg_resource_update' %} active{% endif %}" href="{{ url('bkstg_resource_update', {'id': resource.id, 'production_slug': production.slug}) }}">{{ 'edit'|trans }}</a>
    </li>
    <li class="nav-item">
      <a class="nav-link{% if route == 'bkstg_resource_delete' %} active{% endif %} text-danger" href="{{ url('bkstg_resource_delete', {'id': resource.id, 'production_slug': production.slug}) }}">{{ 'delete'|trans }}</a>
    </li>
  </ul>
{% endif %}
