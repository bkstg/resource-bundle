{% if is_granted('edit', resource) %}
  {% set route = app.request.attributes.get('_route') %}
  <ul class="nav nav-tabs mb-3">
    <li class="nav-item">
      <a class="nav-link{% if route == 'bkstg_resource_show' %} active{% endif %}" href="{{ url('bkstg_resource_show', {'id': resource.id, 'production_slug': production.slug}) }}">View</a>
    </li>
    <li class="nav-item">
      <a class="nav-link{% if route == 'bkstg_resource_edit' %} active{% endif %}" href="{{ url('bkstg_resource_edit', {'id': resource.id, 'production_slug': production.slug}) }}">Edit</a>
    </li>
    <li class="nav-item">
      <a class="nav-link{% if route == 'bkstg_resource_delete' %} active{% endif %} text-danger" href="{{ url('bkstg_resource_delete', {'id': resource.id, 'production_slug': production.slug}) }}">Delete</a>
    </li>
  </ul>
{% endif %}
