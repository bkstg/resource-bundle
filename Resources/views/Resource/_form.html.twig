{% trans_default_domain 'BkstgResourceBundle' %}

{{ form_start(form) }}
  {{ form_errors(form) }}
  <div class="form-row">
    <div class="col-2">{{ form_row(form.active) }}</div>
    <div class="col">{{ form_row(form.name) }}</div>
  </div>
  {{ form_row(form.media) }}
  {{ form_row(form.description) }}
  {{ form_row(form.pinned) }}
  <div class="form-group">
    <a href="{{ url('bkstg_resource_index', {'production_slug': production.slug}) }}" class="btn btn-secondary">{{ 'cancel'|trans }}</a>
    <button type="submit" class="btn btn-primary">{{ 'save'|trans }}</button>
  </div>
{{ form_end(form) }}
