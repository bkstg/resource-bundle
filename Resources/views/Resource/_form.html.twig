{% form_theme form '@BkstgResource/Resource/_form.html.twig' %}
{{ form_start(form) }}
  {{ form_errors(form) }}
  <div class="form-row">
    <div class="col-2">{{ form_row(form.active) }}</div>
    <div class="col">{{ form_row(form.name) }}</div>
  </div>
  {{ form_row(form.media) }}
  {{ form_row(form.description) }}
  {{ form_row(form.pinned) }}
  <div class="form-group">
    <button type="submit" class="btn btn-primary">{{ 'Save'|trans }}</button>
  </div>
{{ form_end(form) }}
