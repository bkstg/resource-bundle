{% extends '@BkstgCore/layout.html.twig' %}
{% set page_title = 'Delete "%name%"?'|trans({'%name%': resource.name }) %}

{% block content %}
  {% include '@BkstgResource/Resource/_actions.html.twig' with { 'resource': resource, 'production': production } only %}
  {{ form_start(form) }}
    {{ form_widget(form) }}
    <div class="form-group form-inline">
      <a href="{{ url('bkstg_resource_index', {'production_slug': production.slug}) }}" class="btn btn-outline-secondary mr-2">{{ 'Cancel'|trans }}</a>
      <input type="submit" name="submit" value="{{ 'Delete'|trans }}" class="btn btn-danger">
    </div>
  {{ form_end(form) }}
{% endblock %}
